<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/imperial.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
  
  <div id="imain">
    <div id="iclimecast">
      <h1>ClimeCast</h1>
    </div>
    <div id="isearch">
      <form action="/getweather/imperial" method="post">
        <i class="ri-search-line"></i>
        <input list="citynames" name="citydetail" type="text" placeholder="search">
        <datalist id="citynames">
          <option value="Bhopal">Bhopal</option>
          <option value="Indore">Indore</option>
          <option value="Mumbai">Mumbai</option>
          <option value="Pune">Pune</option>
          <option value="Bangalore">Bangalore</option>
          <option value="London">London</option>
          <option value="New York">New York</option>
          <option value="Sagar">Sagar</option>
          <option value="Udaipur">Udaipur</option>
          <option value="Agra">Agra</option>
          <option value="Kanpur">Kanpur</option>
          <option value="Lucknow">Lucknow</option>
          <option value="Mangalore">Mangalore</option>
      </datalist>
      </form>
    </div>
    <div id="iweathercard">
      <a href="/getweather">Switch units to Metric</a>
      <div id="iclass1">
        <h2><%=weatherDataimperial.name%>, <%=weatherDataimperial.sys.country%></h2>
      <img src=<%='http://openweathermap.org/img/wn/'+ weatherDataimperial.weather[0].icon+"@2x.png"%>>
      <h3><%=Math.floor(weatherDataimperial.main.temp)%>&#176F</h3>
      <h3><%=weatherDataimperial.weather[0].description%></h3>
      </div>
      <div id="iflex1">
        <div id="iclass3">
        <h4>RealSense: <%=Math.floor(weatherDataimperial.main.feels_like)%>&#176F</h4>
        <h4>Visibility: <%=weatherDataimperial.visibility/1000%>km</h4>
        <h4>Humidity: <%=weatherDataimperial.main.humidity%>%</h4>
        <h4>Pressure: <%=weatherDataimperial.main.pressure%> PA</h4>
        <h4>Wind: <%=Math.floor(weatherDataimperial.wind.speed)%> mph <% var directions = ['↑ N', '↗ NE', '→ E', '↘ SE', '↓ S', '↙ SW', '← W', '↖ NW'];
          %><%=directions[Math.round(weatherDataimperial.wind.deg/45)%8]%></h4>
      </div>

      <div id="iclass2">
        <h4>Sunrise:<%var sr = new Date(weatherDataimperial.sys.sunrise*1000).toLocaleTimeString("en-IN",{
          timeStyle: "short"})%><%=sr%></h4>
        <h4>Sunset:<%var ss = new Date(weatherDataimperial.sys.sunset*1000).toLocaleTimeString("en-IN",{
          timeStyle: "short"})%><%=ss%></h4>
      </div>
      </div>
      <div id="iclass4">
        <div class="itime">
          <h4><%var future = fiveDayWeatherimperial.list[0].dt_txt.split(/[-: ]+/); %><%=future[2];%>/<%=future[1];%></h4>
          <img src=<%='http://openweathermap.org/img/wn/'+ fiveDayWeatherimperial.list[0].weather[0].icon+".png"%>>
          <h4><%=Math.floor(fiveDayWeatherimperial.list[0].main.temp)%>&#176F</h4>
        </div>
        <div class="itime">
          <h4><%var future = fiveDayWeatherimperial.list[7].dt_txt.split(/[-: ]+/); %><%=future[2];%>/<%=future[1];%></h4>
          <img src=<%='http://openweathermap.org/img/wn/'+ fiveDayWeatherimperial.list[7].weather[0].icon+".png"%>>
          <h4><%=Math.floor(fiveDayWeatherimperial.list[7].main.temp)%>&#176F</h4>
        </div>
        <div class="itime">
          <h4><%var future = fiveDayWeatherimperial.list[15].dt_txt.split(/[-: ]+/); %><%=future[2];%>/<%=future[1];%></h4>
          <img src=<%='http://openweathermap.org/img/wn/'+ fiveDayWeatherimperial.list[15].weather[0].icon+".png"%>>
          <h4><%=Math.floor(fiveDayWeatherimperial.list[15].main.temp)%>&#176F</h4>
        </div>
        <div class="itime">
          <h4><%var future = fiveDayWeatherimperial.list[23].dt_txt.split(/[-: ]+/); %><%=future[2];%>/<%=future[1];%></h4>
          <img src=<%='http://openweathermap.org/img/wn/'+ fiveDayWeatherimperial.list[23].weather[0].icon+".png"%>>
          <h4><%=Math.floor(fiveDayWeatherimperial.list[23].main.temp)%>&#176F</h4>
        </div>
        <div class="itime">
          <h4><%var future = fiveDayWeatherimperial.list[31].dt_txt.split(/[-: ]+/); %><%=future[2];%>/<%=future[1];%></h4>
          <img src=<%='http://openweathermap.org/img/wn/'+ fiveDayWeatherimperial.list[31].weather[0].icon+".png"%>>
          <h4><%=Math.floor(fiveDayWeatherimperial.list[31].main.temp)%>&#176F</h4>
        </div>
      </div>
    
    </div>
    <h3 id="ifacts"></h3>
  </div>
  <script>
    var scenery = document.querySelector("#imain")
    if("<%-weatherDataimperial.weather[0].main%>" === undefined){
      
      scenery.style.backgroundImage = "url(/images/Default.jpg)"
    }
    else{
      scenery.style.backgroundImage = "url(/images/<%-weatherDataimperial.weather[0].main%>.jpg)"
    }
